<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <jsp-config>
    <jsp-property-group>
        <url-pattern>*.jsp</url-pattern>
        <el-ignored>false</el-ignored>
        <scripting-invalid>false</scripting-invalid>
    </jsp-property-group>
  </jsp-config>
  <display-name>StudyPlace</display-name>
  <description>This is application in beta</description>
  <listener>
  	<listener-class>web.controller.listener.ContextListener</listener-class>
  </listener>
  
<context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>resources</param-value>
  </context-param>
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
    <param-value>en</param-value>
  </context-param>
  <context-param>
  	<param-name>locales</param-name>
  	<param-value>/WEB-INF/locales.properties</param-value>
  </context-param>
 
  
  <servlet>
  	<servlet-name>Controller</servlet-name>
  	<servlet-class>web.controller.servlet.Controller</servlet-class>	

  	<load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping >
  	<servlet-name>Controller</servlet-name>
  	<url-pattern>/Controller</url-pattern>
  </servlet-mapping>
  
  <filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>web.controller.filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/view/jsp/*</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>CommandAccessFilter</filter-name>
		<filter-class>web.controller.filter.CommandAccessFilter</filter-class>
		<init-param>
			<param-name>admin</param-name>
			<param-value>addCourse openAddCourse</param-value>
		</init-param>
		<init-param>
			<param-name>user</param-name>
			<param-value>addCourse openAddCourse</param-value>
		</init-param>
		
		<init-param>
			<param-name>common</param-name>
			<param-value>logout noCommand</param-value>
		</init-param>
		<init-param>
			<param-name>out-of-control</param-name>
			<param-value>login getRegistration getSignIn registration getProfile updateProfile getUpdateProfile getMain</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>CommandAccessFilter</filter-name>
		<servlet-name>Controller</servlet-name>
	</filter-mapping>
	
	
	
  <welcome-file-list>
		<welcome-file>/login.jsp</welcome-file>
	</welcome-file-list>
	
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/view/jsp/error_page.jsp</location>
	</error-page>
	
	<error-page>
		<error-code>404</error-code>
		<location>/view/jsp/error_page.jsp</location>
	</error-page>
	
	
	
</web-app>
